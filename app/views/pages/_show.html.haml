- content_for :meta_title do
  = @page.meta_title
- content_for :meta_description do
  = @page.meta_description
- content_for :meta_keywords do
  = @page.meta_keywords
- if @page.is_homepage?
  = render :partial => "homepage_feature" , :locals => {:features => @features.reject{|f| f.featurable_section.title != "Home Page Feature Box"}} unless (@features.reject{|f| f.featurable_section.title != "Home Page Feature Box"}.empty?)
  - if @cms_config['site_settings']['wide_feature_box'] and !(@settings.show_features == false or @features.empty?) and @settings.show_feature_thumbs
    .film-strip
  
= # render :partial => "/shared/image_box", :locals => { :owner => @page } unless @page.images.empty?
- if @page.automatically_embed_videos_and_images?
  = ninja_parse(@page.body)
- else
  = @page.body

- if @page.permalink == "home" and !@settings.homepage_banner.blank?
  - content_for :banner do
    = @settings.homepage_banner