  jQuery(".fancy-iframe").fancybox({ 
  'zoomSpeedIn': 300,
  'zoomSpeedOut': 300,
  'overlayShow': true,
  'hideOnContentClick': 'true',
  'easingOut': 'easeOutQuad',
  'easingIn': 'easeInQuad',
  'type': 'iframe',
  'width': 910,
  'autoScale': true,
  'height':"90%"
  }); 
  }); 